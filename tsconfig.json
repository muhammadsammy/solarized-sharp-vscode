{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es7", "dom"],
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build", ".vscode-test"]
}
